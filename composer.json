{
  "name": "meetup/orders-service",
  "description": "Test microservice in Clean Architecture style: Orders Service with CreateOrder use case.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "serve": "php -S 127.0.0.1:8080 -t public"
  }
}

